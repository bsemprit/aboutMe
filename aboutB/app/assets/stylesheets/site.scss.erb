 @font-face { font-family: 'Rex'; src: url(<%= asset_path 'RexBold.otf' %>); } 
 @font-face { font-family: 'Beyno'; src: url(<%= asset_path 'BEYNO.ttf' %>); } 



.brains-holder {
	position: absolute;
	left: 50%;
}

.brains {
	left: -50%;
	z-index: -3;
	height: 50vh;
	position: relative;
	opacity: .8;
}

.home-welcome {
	position: absolute;
	z-index: -1;
}

.bianca-text img{
	width: 40%;
}

.design-text {
	font-family: "Beyno", serif;
	position: absolute;
	top: 80vh;
	width: 97%;
	margin: 0;
	padding: 0;
}

.move-text {
	/*margin-left: 4em;*/
}

.home-text {
	font-family: "Beyno", serif;
	text-shadow: 3px 2px 1px black;
	font-weight: 700;
}

 .left-side-text, .right-side-text {
	height: 100vh;
	width: 50vh;
	padding: 0 !important;
	position: relative;
}

.right-side{
	height: 100vh;
	width: 50vh;
	position: absolute;
	background-color: black;
	right: 0 !important;
	z-index: -10;
}

.right-side-paint img{
	z-index: -8;
	opacity: 0.7;
	width: 100% !important;
	height: auto;	
	position: absolute;
	right: 25%;
	top: 15%;
}

.left-side {
	background-color: black;
	z-index: -4;
	width: 50%;
	height: 100vh;	
	position: absolute;
	left: 0;
}

.full-home-page {
	margin-bottom: 0 !important;
}

.enter-left, .enter-right {
	position: absolute;
}

.enter-left {
	top: 40vh;
	left: 40%;
	font-family: 'Rex', serif; 
}

.enter-right-text {
	font-size: 90px !important;
}

.welcome-right-text {
	font-size: 40px !important;
}

.enter-left-text {
	font-size: 50px !important;
}

.enter-right {
	top: 40vh;
	right: 40%;
	font-family: "Tangerine", serif;
}

.bits-background img {
	opacity: 0.5;
	height: 100vh;
	width: 50vw;
	left: 0;
	position: absolute;
	z-index: -3;
}

.right-background img {
	opacity: 0.3;
	height: 100vh;
	width: 50vw;
	right: 0;	
	position: absolute;
	z-index: -5;
}