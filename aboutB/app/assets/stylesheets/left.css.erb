 @font-face { font-family: 'Rex'; src: url(<%= asset_path 'RexBold.otf' %>); } 

  body {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
    font-family: "Poiret One", serif;
  }

  main {
    flex: 1 0 auto;
  }
    

.first-row {
	margin-bottom: 0 !important;
}

.quote {
	font-family: "Allura", serif;
}


.left-top {
	background-image: url(<%= asset_path 'face.gif' %>), url(<%= asset_path 'faceleft.gif' %>);
	background-position: left, right;
	background-repeat: no-repeat;
	background-size: 40%;
	background-color: black;
	height: 100vh;
}

.left-bianca-text {
	margin-top: 10%;
}

.left-bianca-text img{
	width: 30%;
}

.left-skills {
	background-color: black;
}

.skills-buttons-left {
	margin: 5% 0;
}

.skills-row {
	margin-bottom: 0;
}

.left-portfolio {
	height: 70vh;
	width: 100vw;
	background-image: url(<%= asset_path 'randomTechBackground.jpg' %>);
	background-position: cover;
	background-repeat: no-repeat;
	background-size: 100%;
}

.left-divider {
	margin: 2% 0;
}

.nav-bar {
	position: fixed;
	right: 0;
	top: -6% !important;
	z-index: 10;
	width: 15vw;
}

.computer-nav {
	width: 15vw;
	height: auto;
}

.nav-text-holder {
	position: absolute;
	top: 40%;
	right: 50%;
	font-family: 'Rex', serif;
	font-size: 1.5em;
}

.nav-tree {
	width: 25vw;
}

.inline {
	display: inline-block;
}

.blinker {
	display: inline-block;
	height: 1em;
}

.projects-holder {
	position: relative;
}

.project-left-details {
	margin: 10% 0;
}

.macbook {
	position: relative;
	top: 50%;
	left: 10%;
	width: 400px;
	height: 200px;
}

.left-resume {
	background-color: black;
	background-image: url(<%= asset_path 'pcTop.png' %>);
	background-position: center bottom;
	background-repeat: no-repeat;
	background-size: 60vw;
	background-attachment: local;
}

.enter-row {
	margin-top: 20%;
}

.text-border {
	border-bottom: 2px solid grey;
	border-right: 2px solid grey;
	padding: 5px;
}

.parts-resume-left {
	font-family: 'Poiret One';
	font-size: 18px;
}